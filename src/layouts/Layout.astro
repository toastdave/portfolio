---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Shiny</title>
	</head>
	<body class="to-slate-900 bg-linear-to-br from-slate-950 text-white min-h-[100dvh] flex flex-col">
		<header class="flex h-12 border-b border-slate-800 sticky top-0 z-10 flex-shrink-0">
			<div class="w-10 sm:w-20 border-r border-slate-800 h-full">
			</div>
		</header>

		<!-- Post Header Container -->
		<div class="flex flex-grow overflow-hidden bg-amber-300">

			<!-- Fixed Sidebar -->
			<div class="w-10 sm:w-20 flex-shrink-0 border-r border-slate-800 h-full">
				<!-- Sidebar content -->
			</div>

			<!-- Main Content Area -->
			<main class="flex-grow w-full overflow-auto">
				<slot />
			</main>
		</div>
		
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
